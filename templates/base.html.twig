<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Katzen Dashboard{% endblock %}</title>

    {% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/craueformflow/css/buttons.css') }}" />
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-light">
    <aside class="sidebar d-flex flex-column flex-shrink-0 border-end border-secondary bg-secondary" style="width: 16rem;">
        <div class="p-3 border-bottom border-secondary">
            <h1 class="h4 mb-0 text-primary">Katzen</h1>
        </div>
    </aside>

    <div class="main-content">
        <main class="main-area p-4">
            {% block body %}{% endblock %}
        </main>
    </div>

    {# Bootstrap JS & dependencies #}
    <script src="{{ asset('build/bootstrap.bundle.js') }}"></script>
    <script>
        document.querySelectorAll('a[data-item]').forEach(el => {
            el.addEventListener('click', () => {
                document.querySelectorAll('a[data-item]').forEach(i => i.classList.remove('active', 'text-secondary'));
                el.classList.add('active');
            });
        });
    </script>
</body>
</html>
