{% extends 'professional/base.html.twig' %}
{% block page_title %} Suehr | Projects{% endblock %}
{% block seo_description %}Very interesting projects.{% endblock %}
{% block main_content %}
  <div class="container">
    <a href="/" class="back-link">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z" clip-rule="evenodd"/>
      </svg>
      Greg Suehr
    </a>
    <h1>All Projects</h1>
    
    <table>
      <thead>
        <tr>
          <th>Year</th>
          <th>Category</th>
          <th>Project</th>
          <th class="hide-tablet">Made at</th>
          <th>Built with</th>
          <th class="hide-mobile">Link</th>
        </tr>
      </thead>
      <tbody>
        {% for project in projects %}
        {% if project.category not in ["Play", "Podcast"] %}
        <tr>
          <td class="year">{{ project.year }}</td>          
          <td class="year">{{ project.category }}</td>
          <td>
            {% if project.url %}
            <a href="{{ project.url }}" class="project-name" target="_blank" rel="noreferrer noopener">
              {{ project.name }}
              <svg class="external-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd"/>
              </svg>
            </a>
            {% else %}
            <span class="project-name">{{ project.name }}</span>
            {% endif %}
          </td>
          <td class="hide-tablet">{{ project.madeAt }}</td>
          <td>
            <ul class="tags">
              {% for tag in project.tags %}
              <li class="tag">{{ tag }}</li>
              {% endfor %}
            </ul>
          </td>
          <td class="hide-mobile">
            {% if project.url %}
            <a href="{{ project.url }}" class="project-link" target="_blank" rel="noreferrer noopener">
              {{ project.url|replace({'https://': '', 'http://': ''})|split('/')|first }}
              <svg class="external-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.22 14.78a.75.75 0 001.06 0l7.22-7.22v5.69a.75.75 0 001.5 0v-7.5a.75.75 0 00-.75-.75h-7.5a.75.75 0 000 1.5h5.69l-7.22 7.22a.75.75 0 000 1.06z" clip-rule="evenodd"/>
              </svg>
            </a>
            {% endif %}
          </td>
        </tr>
        {% endif %}
        {% endfor %}
      </tbody>
    </table>
  </div>
</body>
{% endblock %}
