{# templates/plays.html.twig #}
{% extends 'profile_base.html.twig' %}

{% block title %}Greg Suehr | Plays{% endblock %}

{% block content %}
<section class="hero-section">
  <div class="container">
    <h1 class="mb-3"><strong>Service Catalog</strong></h1>
    <p class="text-secondary-dark mb-0">
      Click the cards below for additional detail on services and packages I offer.
    </p>
  </div>
</section>

{% set plays = plays is defined and plays is not empty ? plays : [
  {
    title: 'Application Development',
    slug: '/hire/develop',
    image: '', # asset('images/work/tech.png'),
    blurb: '',
    tags: [],
  },
  {
    title: 'Creative Consulting',
    slug: '/hire/create',
    image: '', # asset('images/work/tech.png'),
    blurb: '',
    tags: [],
  },
  {
    title: 'Translation Services',
    slug: '/hire/translate',
    image: '', # asset('images/work/tech.png'),
    blurb: '',
    tags: [],
  },
  {
    title: 'Technical Consulting',
    slug: '/hire/translate',
    image: '', # asset('images/work/tech.png'),
    blurb: '',
    tags: [],
  },
  {
    title: 'Production Services',
    slug: '/hire/translate',
    image: '', # asset('images/work/tech.png'),
    blurb: '',
    tags: [],
  },
  {
    title: 'Research & Discovery Services',
    slug: '/hire/research',
    image: '', # asset('images/work/tech.png'),
    blurb: '',
    tags: [],
  },
] %}

<section class="section">
  <div class="container">
    <div class="row g-4">
      {% for play in plays %}
        <div class="col-12 col-md-6 col-lg-4">
          <article class="card h-100 border-0 shadow-sm">
            {% if play.image %}
              <img src="{{ play.image }}" alt="{{ play.title }}" class="card-img-top img-fluid">
            {% endif %}
            <div class="card-body d-flex flex-column">
              <h3 class="h5 mb-2">
                {# If you have a route like `play_show`, swap the href below: path('play_show', {slug: play.slug}) #}
                <a href="{{ play.url is defined ? play.url : '#' }}" class="stretched-link text-decoration-none">
                  {{ play.title }}
                </a>
              </h3>
              {% if play.blurb %}
                <p class="text-secondary-dark mb-0">{{ play.blurb }}</p>
              {% endif %}
            </div>
          </article>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
