{# templates/plays.html.twig #}
{% extends 'profile_base.html.twig' %}

{% block title %}Greg Suehr | Plays{% endblock %}

{% block content %}
<section class="hero-section">
  <div class="container">
    <h1 class="mb-3"><strong>Past Work</strong></h1>
    <p class="text-secondary-dark mb-0">
      A selection of productions and scripts-in-motion. For licensing, readings, or materials, please get in touch.
    </p>
  </div>
</section>

{% set plays = plays is defined and plays is not empty ? plays : [
  {
    title: 'The Bother of a Fly',
    slug: 'bother-of-a-fly',
    image: asset('images/plays/bother-of-a-fly.jpg'),
    blurb: 'Freida Harner battles ',
    tags: [],
  },
  {
    title: 'Spider on the Ceiling',
    slug: 'spider-on-the-ceiling',
    image: asset('images/plays/spider-on-the-ceiling.jpg'),
    blurb: 'Cleo Carroway returns to her childhood home to settle the estates of her recently passed mother and grandfather.',
    description: '',
    tags: [],
  },
  {
    title: 'Daisy Drops the Ball',
    slug: 'daisy-drops-the-ball',
    image: asset('images/plays/daisy-drops-the-ball.jpg'),
    blurb: 'Daisy is a paragon of accomplishment. She deserves her new job prestigious art gallery. Nobody could possibly deserve it more. But today, Daisy is going to drop the ball.',
    description: '',
    tags: [],
  },
  {
    title: 'Orbit',
    slug: 'orbit',
    image: asset('images/plays/orbit.jpg'),
    blurb: 'When they receive unexpected transmission from a supposedly empty spacecraft, a flight control team on the graveyard shift clash as each is forced to choose between conscience, survival, and silence.',
    description: '',
    tags: [],
  },
  {
    title: 'Tres Formaggio',
    slug: 'tres-formaggio',
    image: asset('images/plays/tres-formaggio.jpg'),
    blurb: 'Things get complicated when the insecurities of a neglected member of a triad relathionship a Michelin-rated chef come together in this romantic comedy.',
    description: '',
    tags: [],
  },
  {
    title: 'Skull of the Last Khan',
    slug: 'skull-of-the-last-khan',
    image: asset('images/plays/skull-of-the-last-khan.jpg'),
    blurb: "Skull of the Last Khan is a sweeping political tragedy about the afterlife of revolution and the peril of symbols. Arman's reckless idealism threatens his friends and neighbors as he plays revolutionary, until a crossed line endangers the village. Arman seizes upon a plan to reclaim the skull of the last khan as a symbol of the new revolution.",
    description: '',
    tags: [],
  },
] %}

<section class="section">
  <div class="container">
    <div class="row g-4">
      {% for play in plays %}
        <div class="col-12 col-md-6 col-lg-4">
          <article class="card h-100 border-0 shadow-sm">
            {% if play.image %}
              <img src="{{ play.image }}" alt="{{ play.title }}" class="card-img-top img-fluid">
            {% endif %}
            <div class="card-body d-flex flex-column">
              <h3 class="h5 mb-2">
                {# If you have a route like `play_show`, swap the href below: path('play_show', {slug: play.slug}) #}
                <a href="{{ play.url is defined ? play.url : '#' }}" class="stretched-link text-decoration-none">
                  {{ play.title }}
                </a>
              </h3>
              {% if play.blurb %}
                <p class="text-secondary-dark mb-0">{{ play.blurb }}</p>
              {% endif %}
            </div>
          </article>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
