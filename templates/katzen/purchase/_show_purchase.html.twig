<div class="card shadow-sm">
  <div class="card-body">
    {# Header Section #}
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <h2 class="card-title mb-2">
          <i class="bi bi-file-earmark-text me-2 text-primary"></i>Purchase Order #{{ purchase.poNumber }}
        </h2>
        <p class="text-muted mb-0">
          <i class="bi bi-calendar3 me-1"></i>
          Order Date: {{ purchase.orderDate|date('M d, Y') }}
        </p>
      </div>
      
      <div class="text-end">
        {% set statusClass = {
          'pending': 'warning',
          'ordered': 'info',
          'partially_received': 'primary',
          'received': 'success',
          'cancelled': 'danger'
        }[purchase.status|lower] ?? 'secondary' %}
        
        <span class="badge bg-{{ statusClass }} fs-6 px-3 py-2 mb-2">
          <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
          {{ purchase.status|replace({'_': ' '})|title }}
        </span>
        
        <div class="btn-group d-block mt-2" role="group">
          <a href="{{ path('purchase_edit', {'id': purchase.id}) }}" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit
          </a>
          <a href="{{ path('purchase_index', {'id': purchase.id}) }}" class="btn btn-sm btn-outline-success">
            <i class="bi bi-box-arrow-in-down"></i> Receive
          </a>
          <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer"></i> Print
          </button>
        </div>
      </div>
    </div>

    {# Key Information Cards #}
    <div class="row g-3 mb-4">
      {# Vendor Information #}
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="card-subtitle mb-3 text-secondary">
              <i class="bi bi-building me-2"></i>Vendor Information
            </h6>
            {% if purchase.vendor is defined and purchase.vendor %}
              <h5 class="mb-2">{{ purchase.vendor.name }}</h5>
              {% if purchase.vendor.email %}
                <p class="mb-1 text-muted">
                  <i class="bi bi-envelope me-1"></i>
                  <a href="mailto:{{ purchase.vendor.email }}">{{ purchase.vendor.email }}</a>
                </p>
              {% endif %}
              {% if purchase.vendor.phone %}
                <p class="mb-0 text-muted">
                  <i class="bi bi-telephone me-1"></i>{{ purchase.vendor.phone }}
                </p>
              {% endif %}
            {% else %}
              <p class="text-muted mb-0">No vendor assigned</p>
            {% endif %}
          </div>
        </div>
      </div>

      {# Delivery & Dates #}
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="card-subtitle mb-3 text-secondary">
              <i class="bi bi-truck me-2"></i>Delivery Information
            </h6>
            <div class="mb-2">
              <small class="text-muted d-block">Expected Delivery</small>
              <strong>
                {% if purchase.expectedDelivery %}
                  {{ purchase.expectedDelivery|date('M d, Y') }}
                  {% set daysUntil = date(purchase.expectedDelivery).diff(date()).days %}
                  {% if daysUntil > 0 %}
                    <span class="badge bg-info ms-2">{{ daysUntil }} days</span>
                  {% elseif daysUntil == 0 %}
                    <span class="badge bg-warning ms-2">Today</span>
                  {% else %}
                    <span class="badge bg-danger ms-2">{{ daysUntil|abs }} days overdue</span>
                  {% endif %}
                {% else %}
                  <span class="text-muted">Not specified</span>
                {% endif %}
              </strong>
            </div>
            
            {% if purchase.receivedAt %}
              <div class="mb-2">
                <small class="text-muted d-block">Received Date</small>
                <strong class="text-success">
                  <i class="bi bi-check-circle me-1"></i>{{ purchase.receivedAt|date('M d, Y') }}
                </strong>
              </div>
            {% endif %}
            
            <div>
              <small class="text-muted d-block">Last Updated</small>
              <strong>{{ purchase.updatedAt|date('M d, Y g:i A') }}</strong>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# Purchase Items Section #}
    <div class="mb-4">
      <h5 class="text-secondary border-bottom pb-2 mb-3">
        <i class="bi bi-list-check me-2"></i>Purchase Items
        <span class="badge bg-secondary ms-2">{{ purchase.purchaseItems|length }}</span>
      </h5>

      {% if purchase.purchaseItems|length > 0 %}
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th style="width: 5%">#</th>
                <th style="width: 40%">Item</th>
                <th style="width: 15%" class="text-end">Qty Ordered</th>
                <th style="width: 15%" class="text-end">Qty Received</th>
                <th style="width: 12%" class="text-end">Unit Price</th>
                <th style="width: 13%" class="text-end">Line Total</th>
              </tr>
            </thead>
            <tbody>
              {% for item in purchase.purchaseItems %}
                <tr>
                  <td class="text-muted">{{ loop.index }}</td>
                  <td>
                    <div class="d-flex align-items-center">
                      <i class="bi bi-box text-primary me-2 fs-5"></i>
                      <div>
                        <strong class="d-block">
                          {% if item.stockTarget and item.stockTarget.item %}
                            {{ item.stockTarget.item.name }}
                          {% else %}
                            {{ item.stockTarget ? item.stockTarget.name : 'Unknown Item' }}
                          {% endif %}
                        </strong>
                        {% if item.stockTarget and item.stockTarget.baseUnit %}
                          <small class="text-muted">Unit: {{ item.stockTarget.baseUnit.name }}</small>
                        {% endif %}
                      </div>
                    </div>
                  </td>
                  <td class="text-end">
                    <span class="badge bg-light text-dark">{{ item.qtyOrdered }}</span>
                  </td>
                  <td class="text-end">
                    {% set receivedPct = (item.qtyReceived / item.qtyOrdered * 100)|round %}
                    {% if item.qtyReceived == item.qtyOrdered %}
                      <span class="badge bg-success">{{ item.qtyReceived }}</span>
                    {% elseif item.qtyReceived > 0 %}
                      <span class="badge bg-warning text-dark">{{ item.qtyReceived }}</span>
                    {% else %}
                      <span class="badge bg-secondary">0</span>
                    {% endif %}
                    
                    {% if item.qtyReceived != item.qtyOrdered %}
                      <div class="progress mt-1" style="height: 4px;">
                        <div class="progress-bar bg-{{ item.qtyReceived > 0 ? 'warning' : 'secondary' }}" 
                             role="progressbar" 
                             style="width: {{ receivedPct }}%"
                             aria-valuenow="{{ receivedPct }}" 
                             aria-valuemin="0" 
                             aria-valuemax="100"></div>
                      </div>
                    {% endif %}
                  </td>
                  <td class="text-end">${{ item.unitPrice|number_format(2) }}</td>
                  <td class="text-end">
                    <strong>${{ item.lineTotal|number_format(2) }}</strong>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% else %}
        <div class="text-center py-5 text-muted">
          <i class="bi bi-inbox fs-1 d-block mb-3"></i>
          <p class="mb-0">No items in this purchase order</p>
        </div>
      {% endif %}
    </div>

    {# Order Summary #}
    <div class="row justify-content-end">
      <div class="col-md-5">
        <div class="card bg-light border-0">
          <div class="card-body">
            <h6 class="mb-3 text-secondary">
              <i class="bi bi-calculator me-2"></i>Order Summary
            </h6>
            
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">Subtotal:</span>
              <span class="fw-bold">${{ purchase.subtotal|number_format(2) }}</span>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span class="text-muted">Tax:</span>
              <span class="fw-bold">${{ purchase.taxAmount|number_format(2) }}</span>
            </div>
            
            <hr class="my-3">
            
            <div class="d-flex justify-content-between align-items-center">
              <span class="fs-5 fw-bold">Total Amount:</span>
              <span class="fs-4 fw-bold text-primary">${{ purchase.totalAmount|number_format(2) }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# Action Buttons #}
    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
      <a href="{{ path('purchase_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
      </a>
      
      <div class="btn-group" role="group">
        {% if purchase.status != 'cancelled' and purchase.status != 'received' %}
          <a href="{{ path('purchase_index', {'id': purchase.id}) }}" class="btn btn-success">
            <i class="bi bi-box-arrow-in-down me-1"></i>Receive Items
          </a>
        {% endif %}
        
        {% if purchase.status == 'pending' or purchase.status == 'ordered' %}
          <a href="{{ path('purchase_edit', {'id': purchase.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit Order
          </a>
        {% endif %}
        
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
          <i class="bi bi-x-circle me-1"></i>Cancel Order
        </button>
      </div>
    </div>
  </div>
</div>

{# Cancel Confirmation Modal #}
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cancelModalLabel">
          <i class="bi bi-exclamation-triangle text-warning me-2"></i>Cancel Purchase Order
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to cancel this purchase order?</p>
        <p class="mb-0"><strong>PO #{{ purchase.poNumber }}</strong></p>
        <p class="text-muted mb-0">This action cannot be undone.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No, Keep It</button>
        <form action="{{ path('purchase_index', {'id': purchase.id}) }}" method="post" class="d-inline">
          <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ purchase.id) }}">
          <button type="submit" class="btn btn-danger">
            <i class="bi bi-x-circle me-1"></i>Yes, Cancel Order
          </button>
        </form>
      </div>
    </modal-dialog>
  </div>
</div>

<style>
  @media print {
    .btn, .btn-group, .modal, .border-top:last-child {
      display: none !important;
    }
    
    .card {
      border: none !important;
      box-shadow: none !important;
    }
  }
  
  .table tbody tr {
    transition: background-color 0.2s ease;
  }
  
  .table tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
  }
  
  .progress {
    background-color: #e9ecef;
  }
  
  .badge {
    font-weight: 500;
  }
  
  .card-body h6.card-subtitle {
    font-weight: 600;
    letter-spacing: 0.5px;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add smooth animations to cards
  const cards = document.querySelectorAll('.card');
  cards.forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    setTimeout(() => {
      card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      card.style.opacity = '1';
      card.style.transform = 'translateY(0)';
    }, index * 50);
  });
  
  // Highlight overdue orders
  const overdueElements = document.querySelectorAll('.badge.bg-danger');
  overdueElements.forEach(el => {
    if (el.textContent.includes('overdue')) {
      el.closest('.card')?.classList.add('border-danger');
    }
  });
});
</script>
