<div class="card shadow-sm">
  <div class="card-body">
    <h2 class="card-title mb-4">Create a Vendor Invoice</h2>
      
    {{ form_start(form) }}
    {{ form_errors(form) }}
    
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.invoice_number) }}</div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.vendor) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.invoice_date) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.due_date) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.total_amount) }}</div>
    </div>
    
    <div class="d-flex justify-content-end gap-2">
      {{ form_row(form.submit, { 'label': 'Save' }) }}
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, { render_rest: false }) }}
  </div>
</div>
