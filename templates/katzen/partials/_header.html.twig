<header class="bg-white border-bottom py-3 px-4">
  <div class="d-flex justify-content-between align-items-center">
    <div>
      <h2 class="h5 mb-1">
        {{ "now"|date("H") < 12 ? 'Good Morning' : ("now"|date("H") < 18 ? 'Good Afternoon' : 'Good Evening') }}, {{ user.firstName }}!
      </h2>
      <p class="mb-0 text-muted">{{ encouragement.header_message }}
    </div>
    <div class="d-flex align-items-center gap-3">
      <div class="position-relative">
        <input type="search" class="form-control form-control-sm ps-5 pe-3" placeholder="Search..." style="width: 200px;">
        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-2 text-muted"></i>
      </div>
      <div class="position-relative">
        <button type="button" class="btn btn-link text-muted p-0">
          <i class="bi bi-bell-fill"></i>
        </button>
        <span class="badge bg-info text-light position-absolute top-0 start-100 translate-middle rounded-circle" style="font-size:0.6rem;">2</span>
      </div>
    </div>
  </div>
  {% if (alerts ?? null ) %}
  <div class="alert alert-warning mt-3 mb-0 d-flex align-items-center" role="alert">
    <strong class="me-2">Alert:</strong>
    <span>{{ alerts.alert_text }}</span>
  </div>
  {% endif %}
</header>
