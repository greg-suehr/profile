<div class="card shadow-sm">
  <div class="card-body">
    {# Header Section #}
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <h2 class="card-title mb-2">
          <i class="bi bi-file-earmark-text me-2 text-primary"></i>Vendor #{{ vendor.vendorCode }}
        </h2>
        <p class="text-muted mb-0">
          <i class="bi bi-calendar3 me-1"></i>
          Last Order Date: {{ '2025-10-25' |date('M d, Y') }}
        </p>
      </div>
      
      <div class="text-end">
        {% set statusClass = {
        'inactive': 'warning',
        'active': 'primary',
        'preferred': 'success',
        'flagged': 'danger'
        }[vendor.status|lower] ?? 'secondary' %}
        
        <span class="badge bg-{{ statusClass }} fs-6 px-3 py-2 mb-2">
          <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
          {{ vendor.status|replace({'_': ' '})|title }}
        </span>
        
        <div class="btn-group d-block mt-2" role="group">
          <a href="{{ path('vendor_edit', {'id': vendor.id}) }}" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit
          </a>
        </div>
      </div>
    </div>
    
    {# Key Information Cards #}
    <div class="row g-3 mb-4">
      {# Vendor Information #}
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="card-subtitle mb-3 text-secondary">
              <i class="bi bi-building me-2"></i>Vendor Information
            </h6>
            <h5 class="mb-2">{{ vendor.name }}</h5>
            {% if vendor.email %}
            <p class="mb-1 text-muted">
              <i class="bi bi-envelope me-1"></i>
              <a href="mailto:{{ vendor.email }}">{{ vendor.email }}</a>
            </p>
            {% endif %}
            {% if vendor.phone %}
            <p class="mb-0 text-muted">
              <i class="bi bi-telephone me-1"></i>{{ vendor.phone }}
            </p>
            {% endif %}
          </div>
        </div>
      </div>
      
      {# AP Balance and Terms #}
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="card-subtitle mb-3 text-secondary">
              <i class="bi bi-truck me-2"></i>Balance and Terms
            </h6>
            {% if vendor.currentBalance %}
            <div class="mb-2">
              <small class="text-muted d-block">AP Balance</small>
              <strong>
                {{ vendor.currentBalance }}
              </strong>
            </div>
            {% endif %}
            
            {% if vendor.paymentTerms %}
            <div class="mb-2">
              <small class="text-muted d-block">Payment Terms</small>
              <strong class="text-success">
                <i class="bi bi-check-circle me-1"></i>{{ vendor.paymentTerms }}
              </strong>
            </div>
            {% endif %}            
          </div>
        </div>
      </div>
    </div>

    {# Purchase Orders Section #}
    <div class="mb-4">
      <h5 class="text-secondary border-bottom pb-2 mb-3">
        <i class="bi bi-list-check me-2"></i>Purchase Orders
        <span class="badge bg-secondary ms-2">{{ vendor.purchases|length }}</span>
      </h5>
      
      {% if vendor.purchases|length > 0 %}
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th style="width: 15%">PO #</th>
              <th style="width: 30%" class="text-end">Qty Ordered</th>
              <th style="width: 30%" class="text-end">Qty Received</th>
              <th style="width: 25%" class="text-end">Total</th>
            </tr>
          </thead>
          <tbody>
            {% for po in vendor.purchases %}
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <i class="bi bi-box text-primary me-2 fs-5"></i>
                  <div>
                    <strong class="d-block">
                      {{ po.poNumber }}
                    </strong>
                  </div>
              </td>
              <td class="text-end">
                <span class="badge bg-light text-dark">{{ 99 }}</span>
              </td>
              <td class="text-end">
                {% set receivedPct = (29 / 99 * 100)|round %}
                {% if 29 == 99 %}
                <span class="badge bg-success">{{ 29 }}</span>
                {% elseif 29 > 0 %}
                <span class="badge bg-warning text-dark">{{ 29 }}</span>
                {% else %}
                <span class="badge bg-secondary">0</span>
                {% endif %}
                
                {% if 29 != 99 %}
                <div class="progress mt-1" style="height: 4px;">
                  <div class="progress-bar bg-{{ 29 > 0 ? 'warning' : 'secondary' }}" 
                       role="progressbar" 
                       style="width: {{ receivedPct }}%"
                       aria-valuenow="{{ receivedPct }}" 
                       aria-valuemin="0" 
                       aria-valuemax="100"></div>
                </div>
                {% endif %}
              </td>
              <td class="text-end">
                <strong>{{ po.totalAmount|number_format(2) }}</strong>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        </div>
        {% else %}
        <div class="text-center py-5 text-muted">
          <i class="bi bi-inbox fs-1 d-block mb-3"></i>
          <p class="mb-0">No purchase orders.</p>
        </div>
        {% endif %}
      </div>
      
      {# Action Buttons #}
      <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
        <a href="{{ path('vendor_index') }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>        
      </div>
    </div>
  </div>
</div>
