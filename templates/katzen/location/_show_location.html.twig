<div class="card shadow-sm">
  <div class="card-body">
    {# Header Section #}
    <div class="d-flex justify-content-between align-items-start mb-4">
      <div>
        <h2 class="card-title mb-2">
          <i class="bi bi-file-earmark-text me-2 text-primary"></i>Location #{{ location.code }}
        </h2>
        <p class="text-muted mb-0">
          <i class="bi bi-calendar3 me-1"></i>
          Order Date: {{ location.address }}
        </p>
      </div>
      
      <div class="text-end">
        {% set statusClass = {
        'out_items': 'danger',
        'low_items': 'warning',
        'open_purchase_requests': 'info',
        'ok': 'primary',
        'pending_reconcile': 'warning',        
        'recent_reconcile': 'success',
        }[location.status|lower] ?? 'secondary' %}
        
        <span class="badge bg-{{ statusClass }} fs-6 px-3 py-2 mb-2">
          <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
          {{ location.status|replace({'_': ' '})|title }}
        </span>
        
        <div class="btn-group d-block mt-2" role="group">
          <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit
          </a>
          <button type="button" class="btn btn-sm btn-outline-secondary" onclick="window.print()">
            <i class="bi bi-printer"></i> Print
          </button>
        </div>
      </div>
    </div>

    {# Key Information Cards #}
    <div class="row g-3 mb-4">
      {# Location Details #}
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="card-subtitle mb-3 text-secondary">
              <i class="bi bi-building me-2"></i>Location Details
            </h6>
            {% if location.manager is defined and location.manager %}
              <h5 class="mb-2">{{ location.manager.name }}</h5>
              {% if location.manager.email %}
                <p class="mb-1 text-muted">
                  <i class="bi bi-envelope me-1"></i>
                  <a href="mailto:{{ location.manager.email }}">{{ location.manager.email }}</a>
                </p>
              {% endif %}
              {% if location.manager.phone %}
                <p class="mb-0 text-muted">
                  <i class="bi bi-telephone me-1"></i>{{ location.manager.phone }}
                </p>
              {% endif %}
            {% else %}
              <p class="text-muted mb-0">No manager assigned</p>
            {% endif %}
          </div>
        </div>
      </div>

      {# Count and Delivery Dates #}
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="card-subtitle mb-3 text-secondary">
              <i class="bi bi-truck me-2"></i>Delivery Information
            </h6>
            <div class="mb-2">
              <small class="text-muted d-block">Next Expected Delivery</small>
              <strong>
                {% if location.nextExpectedDelivery %}
                  {{ location.nextExpectedDelivery|date('M d, Y') }}
                  {% set daysUntil = date(location.nextExpectedDelivery).diff(date()).days %}
                  {% if daysUntil > 0 %}
                    <span class="badge bg-info ms-2">{{ daysUntil }} days</span>
                  {% elseif daysUntil == 0 %}
                    <span class="badge bg-warning ms-2">Today</span>
                  {% else %}
                    <span class="badge bg-danger ms-2">{{ daysUntil|abs }} days overdue</span>
                  {% endif %}
                {% else %}
                  <span class="text-muted">Not specified</span>
                {% endif %}
              </strong>
            </div>
            
            {% if location.reconciledAt %}
              <div class="mb-2">
                <small class="text-muted d-block">Last Stock Count</small>
                <strong class="text-success">
                  <i class="bi bi-check-circle me-1"></i>{{ location.reconciledAt|date('M d, Y') }}
                </strong>
              </div>
            {% endif %}
            
            <div>
              <small class="text-muted d-block">Last Updated</small>
              <strong>{{ "now"|date('M d, Y g:i A') }}</strong>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# Location Items Section #}
    <div class="mb-4">
      <h5 class="text-secondary border-bottom pb-2 mb-3">
        <i class="bi bi-list-check me-2"></i>Nested Location
        <span class="badge bg-secondary ms-2">{{ location.childLocations|length }}</span>
      </h5>

      <h5 class="text-secondary border-bottom pb-2 mb-3">
        <i class="bi bi-list-check me-2"></i>Current Stock
        <span class="badge bg-secondary ms-2">{{ location.locationBalances|length }}</span>
      </h5>      
      
      {% if location.locationBalances|length > 0 %}
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th style="width: 25%">Item</th>
                <th style="width: 20%" class="text-end">Qty Stock</th>
                <th style="width: 20%" class="text-end">Qty Reserve</th>
                <th style="width: 35%" class="text-end">Last Updateded</th>                
              </tr>
            </thead>
            <tbody>
              {% for balance in location.locationBalances %}
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <i class="bi bi-box text-primary me-2 fs-5"></i>
                      <div>
                        <strong class="d-block">
                          {% if balance.stockLot.stockTarget and balance.stockLot.stockTarget.item %}
                            {{ balance.stockLot.stockTarget.item.name }}
                          {% else %}
                            {{ balance.stockLot.stockTarget ? balance.stockLot.stockTarget.name : 'Unknown Item' }}
                          {% endif %}
                        </strong>
                        {% if balance.stockLot.stockTarget and balance.stockLot.stockTarget.baseUnit %}
                          <small class="text-muted">Unit: {{ balance.stockLot.stockTarget.baseUnit.name }}</small>
                        {% endif %}
                      </div>
                    </div>
                  </td>
                  <td class="text-end">
                    <span class="badge bg-light text-dark">{{ balance.qty }}</span>
                  </td>
                  <td class="text-end">
                    <span class="badge bg-light text-dark">{{ balance.reservedQty }}</span>
                  </td>                  
                  <td class="text-end">
                    {{ balance.updatedAt | date('M d, Y g:i A')}}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% else %}
        <div class="text-center py-5 text-muted">
          <i class="bi bi-inbox fs-1 d-block mb-3"></i>
          <p class="mb-0">No items in this location order</p>
        </div>
      {% endif %}
    </div>

    {# Action Buttons #}
    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
      <a href="{{ path('location_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to List
      </a>
      
      <a href="{{ path('location_edit', {'id': location.id}) }}" class="btn btn-primary">
        <i class="bi bi-pencil me-1"></i>Edit Order
      </a>
    </div>
  </div>
</div>

<style>
  @media print {
    .btn, .btn-group, .modal, .border-top:last-child {
      display: none !important;
    }
    
    .card {
      border: none !important;
      box-shadow: none !important;
    }
  }
  
  .table tbody tr {
    transition: background-color 0.2s ease;
  }
  
  .table tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
  }
  
  .progress {
    background-color: #e9ecef;
  }
  
  .badge {
    font-weight: 500;
  }
  
  .card-body h6.card-subtitle {
    font-weight: 600;
    letter-spacing: 0.5px;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add smooth animations to cards
  const cards = document.querySelectorAll('.card');
  cards.forEach((card, index) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(20px)';
    setTimeout(() => {
      card.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      card.style.opacity = '1';
      card.style.transform = 'translateY(0)';
    }, index * 50);
  });
  
  // Highlight overdue orders
  const overdueElements = document.querySelectorAll('.badge.bg-danger');
  overdueElements.forEach(el => {
    if (el.textContent.includes('overdue')) {
      el.closest('.card')?.classList.add('border-danger');
    }
  });
});
</script>
