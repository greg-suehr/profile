<div class="card shadow-sm">
  <div class="card-body">
    <h2 class="card-title mb-4">Create an Invoice</h2>
      
    <div class="katzen-tip my-4 p-4 rounded-2xl shadow-sm border border-[#C1B5A9] bg-[#F8F5F0]">
      <div class="d-flex align-items-start">
        <i class="lucide-lightbulb text-[#6C4B5E] me-3 fs-4"></i>
        <div>
          <strong class="d-block mb-1 text-[#4B4A47]">Heads Up!</strong>
          <p class="mb-0 text-[#4B4A47]">
            Orders are automatically invoiced on completion.
          </p>
        </div>
      </div>
    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.invoice_number) }}</div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.customer) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.invoice_date) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.due_date) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.amount_due) }}</div>
    </div>
    
    <div class="d-flex justify-content-end gap-2">
      {{ form_row(form.submit, { 'label': 'Save' }) }}
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, { render_rest: false }) }}
  </div>
</div>
