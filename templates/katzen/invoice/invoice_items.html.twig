{% extends 'katzen/_dashboard_base.html.twig' %}

{% block title %}Create Invoice{% endblock %}

{% block main_content %}
<div class="container-fluid my-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4">Create Invoice</h2>

      <div class="alert alert-primary mb-4">
        <div class="row">
          <div class="col-md-6">
            <strong>Customer:</strong> {{ invoice.customer.name }}
            {% if invoice.orders %}
            <strong>Order Number:</strong> {{ invoice.orders.count > 1 ? 'multi' : 'who knows' }}<br>
            {% endif %}
          </div>
        </div>
      </div>

      <form method="post">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead class="table-light">
              <tr>
                <th style="width: 25%;">Item</th>
                <th style="width: 10%;" class="text-center">Quantity</th>
                <th style="width: 10%;" class="text-center">Price</th>
                <th style="width: 45%;">Notes</th>
              </tr>
            </thead>
            <tbody>
              {% for order in invoice.orders %}
              {% for item in order.orderItems %}
              <tr>
                <td>
                  <strong>{{ item.sellable.name }}</strong>
                  <input
                    type="hidden"
                    name="items[{{ item.id }}][stock_target_id]"
                    class="form-control"
                    value={{ item.sellable.id }}
                    >
                  <input
                    type="hidden"
                    name="items[{{ item.id }}][description]"
                    class="form-control"
                    value={{ item.sellable.name }}
                    >                  
                </td>
                <td class="text-center">{{ item.quantity }}</td>
                <td>
                  <input 
                    type="number" 
                    name="items[{{ item.id }}][quantity]" 
                    class="form-control"
                    placeholder="0.00"
                    value={{ item.quantity }}
                  >
                </td>
                <td>
                  <input 
                    type="number" 
                    name="items[{{ item.id }}][unit_price]" 
                    class="form-control form-control-sm"
                    placeholder="0.00"
                    value={{ item.unitPrice }}
                    >
                </td>
                <td>
                  <input 
                    type="text" 
                    name="items[{{ item.id }}][notes]" 
                    class="form-control form-control-sm" 
                    placeholder="Optional"
                  >
                </td>
              </tr>
              {% endfor %}
              {% endfor %}              
            </tbody>
          </table>
        </div>


        <div class="d-flex justify-content-between mt-4">
          <a href="{{ path('invoice_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back
          </a>
          <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-2"></i>Create Invoice
          </button>
        </div>

        <input type="hidden" name="_token" value="{{ csrf_token('invoice') }}">
      </form>
    </div>
  </div>
</div>
{% endblock %}
