<div class="card shadow-sm">
  <div class="card-body">
    {# Header Section #}
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="card-title mb-0">
        <i class="bi bi-receipt me-2 text-primary"></i>Order Details
      </h2>
      <div class="d-flex align-items-center gap-2">
        <span class="badge 
          {% if order.status == 'completed' %}bg-success
          {% elseif order.status == 'ready' %}bg-info
          {% elseif order.status == 'cancelled' %}bg-danger
          {% else %}bg-warning{% endif %} 
          fs-6 px-3 py-2">
          {{ order.status|upper }}
        </span>
      </div>
    </div>

    {# Order Information Grid #}
    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="text-secondary mb-3">
              <i class="bi bi-info-circle me-2"></i>Order Information
            </h6>
            <div class="mb-2">
              <small class="text-muted d-block">Order ID</small>
              <strong>#{{ order.id }}</strong>
            </div>
            <div class="mb-2">
              <small class="text-muted d-block">Customer</small>
              <strong>
                {% if order.customerEntity %}
                  <a href="{{ path('customer_show', {'id': order.customerEntity.id}) }}" class="text-decoration-none">
                    {{ order.customerEntity.name }}
                  </a>
                {% else %}
                  {{ order.customer ?? '—' }}
                {% endif %}
              </strong>
            </div>
            <div class="mb-2">
              <small class="text-muted d-block">Created</small>
              <strong>{{ order.createdAt ? order.createdAt|date('M d, Y g:i A') : '—' }}</strong>
            </div>
            {% if order.scheduledAt %}
            <div class="mb-2">
              <small class="text-muted d-block">Scheduled For</small>
              <strong class="text-primary">{{ order.scheduledAt|date('M d, Y g:i A') }}</strong>
            </div>
            {% endif %}
            {% if order.fulfilledAt %}
            <div class="mb-2">
              <small class="text-muted d-block">Fulfilled</small>
              <strong class="text-success">{{ order.fulfilledAt|date('M d, Y g:i A') }}</strong>
            </div>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card bg-light border-0 h-100">
          <div class="card-body">
            <h6 class="text-secondary mb-3">
              <i class="bi bi-cash-stack me-2"></i>Order Summary
            </h6>
            <div class="mb-2">
              <small class="text-muted d-block">Subtotal</small>
              <strong>${{ order.subtotal|number_format(2) }}</strong>
            </div>
            <div class="mb-2">
              <small class="text-muted d-block">Tax</small>
              <strong>${{ order.taxAmount|number_format(2) }}</strong>
            </div>
            <div class="mb-2 pt-2 border-top">
              <small class="text-muted d-block">Total Amount</small>
              <strong class="fs-5 text-primary">${{ order.totalAmount|number_format(2) }}</strong>
            </div>
            <div class="mb-0">
              <small class="text-muted d-block">Fulfillment Status</small>
              <span class="badge 
                {% if order.fulfillmentStatus == 'fulfilled' %}bg-success
                {% elseif order.fulfillmentStatus == 'partial' %}bg-warning
                {% else %}bg-secondary{% endif %}">
                {{ order.fulfillmentStatus|default('pending')|upper }}
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# Notes Section #}
    {% if order.notes %}
    <div class="card bg-warning bg-opacity-10 border-warning mb-4">
      <div class="card-body">
        <h6 class="text-warning mb-2">
          <i class="bi bi-sticky me-2"></i>Notes
        </h6>
        <p class="mb-0">{{ order.notes }}</p>
      </div>
    </div>
    {% endif %}

    {# Order Items Section #}
    <div class="mb-4">
      <h5 class="text-secondary border-bottom pb-2 mb-3">
        <i class="bi bi-list-ul me-2"></i>Order Items
      </h5>
      
      {% if order.orderItems|length > 0 %}
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>Item</th>
              <th class="text-center">Quantity</th>
              <th class="text-end">Unit Price</th>
              <th class="text-end">Line Total</th>
            </tr>
          </thead>
          <tbody>
            {% for item in order.orderItems %}
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <i class="bi bi-box-seam text-muted me-2"></i>
                  <div>
                    {% if item.recipeListRecipeId %}
                      <a href="{{ path('recipe_view', {'id': item.recipeListRecipeId.id}) }}" class="text-decoration-none fw-medium">
                        {{ item.recipeListRecipeId.title }}
                      </a>
                    {% else %}
                      <span class="text-muted">Unknown Item</span>
                    {% endif %}
                  </div>
                </div>
              </td>
              <td class="text-center">
                <span class="badge bg-secondary">{{ item.quantity ?? 1 }}</span>
              </td>
              <td class="text-end">
                ${{ item.unitPrice|default('0.00')|number_format(2) }}
              </td>
              <td class="text-end fw-bold">
                ${{ ((item.quantity ?? 1) * (item.unitPrice|default('0.00')))|number_format(2) }}
              </td>
            </tr>
            {% endfor %}
          </tbody>
          <tfoot class="table-light">
            <tr>
              <td colspan="3" class="text-end fw-bold">Subtotal:</td>
              <td class="text-end fw-bold">${{ order.subtotal|number_format(2) }}</td>
            </tr>
            <tr>
              <td colspan="3" class="text-end">Tax:</td>
              <td class="text-end">${{ order.taxAmount|number_format(2) }}</td>
            </tr>
            <tr class="table-primary">
              <td colspan="3" class="text-end fw-bold fs-5">Total:</td>
              <td class="text-end fw-bold fs-5 text-primary">${{ order.totalAmount|number_format(2) }}</td>
            </tr>
          </tfoot>
        </table>
      </div>
      {% else %}
      <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>No items in this order.
      </div>
      {% endif %}
    </div>

    {# Related Invoices Section #}
    {% if order.invoices|length > 0 %}
    <div class="mb-4">
      <h5 class="text-secondary border-bottom pb-2 mb-3">
        <i class="bi bi-file-earmark-text me-2"></i>Related Invoices
      </h5>
      <div class="list-group">
        {% for invoice in order.invoices %}
        <a href="{{ path('invoice_show', {'id': invoice.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
          <div>
            <i class="bi bi-file-earmark-text text-primary me-2"></i>
            <strong>Invoice #{{ invoice.invoiceNumber }}</strong>
            <small class="text-muted ms-2">{{ invoice.invoiceDate|date('M d, Y') }}</small>
          </div>
          <div>
            <span class="badge 
              {% if invoice.status == 'paid' %}bg-success
              {% elseif invoice.status == 'overdue' %}bg-danger
              {% elseif invoice.status == 'partial' %}bg-warning
              {% else %}bg-secondary{% endif %} me-2">
              {{ invoice.status|upper }}
            </span>
            <strong>${{ invoice.totalAmount|number_format(2) }}</strong>
          </div>
        </a>
        {% endfor %}
      </div>
    </div>
    {% endif %}

    {# Action Buttons #}
    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
      <a href="{{ path('order_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Orders
      </a>
      
      <div class="btn-group" role="group">
        {% if order.status == 'pending' or order.status == 'ready' %}
          <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit Order
          </a>
        {% endif %}
        
        {% if order.status == 'pending' or order.status == 'ready' %}
          <form action="{{ path('order_fulfill_all', {'id': order.id}) }}" method="post" style="display:inline" 
                onsubmit="return confirm('Mark this order as complete?');">
            <input type="hidden" name="_token" value="{{ csrf_token('order_fulfill_all_' ~ order.id) }}">
            <button type="submit" class="btn btn-success">
              <i class="bi bi-check-circle me-1"></i>Mark as Complete
            </button>
          </form>
        {% endif %}

        {% if order.invoices|length == 0 and (order.status == 'completed' or order.status == 'ready') %}
          <a href="{{ path('invoice_create_from_order', {'order_id': order.id}) }}" class="btn btn-info">
            <i class="bi bi-file-earmark-plus me-1"></i>Create Invoice
          </a>
        {% endif %}
        
        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
          <i class="bi bi-x-circle me-1"></i>Void Order
        </button>
      </div>
    </div>
  </div>
</div>

{# Cancel Confirmation Modal #}
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cancelModalLabel">
          <i class="bi bi-exclamation-triangle text-warning me-2"></i>Cancel Order
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to cancel this order?</p>
        <p class="mb-0"><strong>Order #{{ order.id }}</strong></p>
        <p class="text-muted">Customer: {{ order.customer ?? order.customerEntity.name ?? 'Unknown' }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep Order</button>
        <form action="{{ path('order_void', {'id': order.id}) }}" method="post" style="display:inline">
          <input type="hidden" name="_token" value="{{ csrf_token('order_void_' ~ order.id) }}">
          <button type="submit" class="btn btn-danger">
            <i class="bi bi-x-circle me-1"></i>Yes, Void Order
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
