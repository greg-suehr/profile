{% extends 'katzen/base.html.twig' %}

{% block title %}Recipe Dashboard{% endblock %}

{% block body %}
<style>
  .dashboard-layout {
  display: flex;
  min-height: 100vh;
  background-color: $color-surface;
  color: $color-text;
  font-family: 'Inter', sans-serif;
}

.sidebar {
  background-color: $color-dark;
  padding: 2rem 1rem;
  width: 240px;
  border-right: 1px solid $color-border;
  display: flex;
  flex-direction: column;
}

.sidebar .logo h1 {
  font-size: 1.6rem;
  font-weight: 700;
  margin-bottom: 2rem;
  color: $color-primary-dark;
}

.nav-main ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-main li {
  margin-bottom: 0.75rem;
}

.nav-main a {
  text-decoration: none;
  color: $color-text-muted;
  padding: 0.5rem 0.75rem;
  display: block;
  border-radius: 6px;
  transition: background 0.2s;
}

.nav-main a:hover {
  background-color: $color-primary-light;
  color: $color-dark;
}

.dashboard-content {
  flex-grow: 1;
  padding: 3rem;
  display: flex;
  flex-direction: column;
  gap: 3rem;
  background-color: $color-surface;
}

.dashboard-section h3 {
  font-size: 1.25rem;
  margin-bottom: 1.25rem;
  color: $color-primary-dark;
}

.dashboard-links {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 1rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

.dashboard-links li a {
  display: block;
  padding: 1rem 1.25rem;
  background-color: $color-surface-light;
  border: 1px solid $color-border;
  border-radius: 8px;
  text-decoration: none;
  color: $color-text;
  transition: all 0.2s ease;
  font-weight: 500;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
}

.dashboard-links li a:hover {
  background-color: $color-primary-light;
  border-color: $color-primary;
  color: $color-dark;
  box-shadow: 0 3px 6px rgba(0,0,0,0.08);
}

</style>
<div class="dashboard-layout">

  <aside class="sidebar">
    <div class="logo">
      <h1>Katzen</h1>
    </div>
    <nav class="nav-main">
      <ul>
        <li><a href="{{ path('app_recipe') }}">My Recipes</a></li>
        <li><a href="{{ path('app_recipe') }}">Collections</a></li>
        <li><a href="{{ path('app_recipe') }}">Tags</a></li>
        <li><a href="{{ path('app_recipe') }}">Item Catalog</a></li>
        <li><a href="{{ path('app_recipe') }}">Settings</a></li>
      </ul>
    </nav>
  </aside>

  <div class="dashboard-content">
    <section class="dashboard-section">
      <h3>Catalog Management</h3>
      <ul class="dashboard-links">
        <li><a href="{{ path('item_index') }}">View Item Catalog</a></li>
        <li><a href="{{ path('item_index') }}">Update Item Catalog</a></li>
      </ul>
    </section>

    <section class="dashboard-section">
      <h3>Recipe Building</h3>
      <ul class="dashboard-links">
        <li><a href="{{ path('recipe_table') }}">View Recipe Catalog</a></li>
        <li><a href="{{ path('recipe_build') }}">Build Manual Recipe</a></li>
        <li><a href="{{ path('recipe_build') }}">Smart Recipe Builder</a></li>
        <li><a href="{{ path('recipe_import') }}">Duplicate Recipe</a></li>
        <li><a href="{{ path('recipe_table') }}">Archive Recipes</a></li>
      </ul>
    </section>

    <section class="dashboard-section">
      <h3>Public & Personal Recipes</h3>
      <ul class="dashboard-links">
        <li><a href="{{ path('app_recipe') }}">Browse Public Recipes</a></li>
        <li><a href="{{ path('app_recipe') }}">Search Public Recipes</a></li>
        <li><a href="{{ path('app_recipe') }}">Favorite Recipes</a></li>
        <li><a href="{{ path('app_recipe') }}">“Tried It!” Recipes</a></li>
        <li><a href="{{ path('app_recipe') }}">Add Personal Notes</a></li>
        <li><a href="{{ path('app_recipe') }}">Build a Personal Collection</a></li>
      </ul>
    </section>

    <section class="dashboard-section">
      <h3>Sharing & Publishing</h3>
      <ul class="dashboard-links">
        <li><a href="{{ path('app_recipe') }}">Offline-Friendly Print Layouts</a></li>
        <li><a href="{{ path('app_recipe') }}">Publish Menus</a></li>
        <li><a href="{{ path('app_recipe') }}">Bulk Import/Export</a></li>
        <li><a href="{{ path('app_recipe') }}">Attach Videos or Links</a></li>
        <li><a href="{{ path('app_recipe') }}">Share via Social Media</a></li>
      </ul>
    </section>

  </div>

</div
{% endblock %}
