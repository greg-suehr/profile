<div class="card shadow-sm">
  <div class="card-body">
    <h2 class="card-title mb-4">Create a Customer</h2>

    {{ form_start(form) }}
    {{ form_errors(form) }}
    
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.name) }}</div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.email) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.phone) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.type) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.billing_address) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.shipping_address) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.account_balance) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.credit_limit) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.status) }}</div>
    </div>
    <div class="row g-3 mb-4">
      <div class="col-md-6">{{ form_row(form.notes) }}</div>
    </div>
    
    <div class="d-flex justify-content-end gap-2">
      {{ form_row(form.submit, { 'label': 'Save' }) }}
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, { render_rest: false }) }}
  </div>
</div>
