<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      {# Header #}
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2>
            <i class="bi bi-tag-fill me-2"></i>
            {{ priceRule ? 'Edit Price Rule' : 'Create New Price Rule' }}
          </h2>
          {% if priceRule %}
            <p class="text-muted mb-0">Editing: {{ priceRule.name }}</p>
          {% endif %}
        </div>
        <a href="{{ path('price_rule_index') }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-1"></i>Back to Rules
        </a>
      </div>

      {# Form Card #}
      <div class="row">
        <div class="col-lg-8">
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h5 class="mb-0">Rule Configuration</h5>
            </div>
            <div class="card-body">
              {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
              
              {# Basic Information #}
              <div class="mb-4">
                <h6 class="text-secondary border-bottom pb-2 mb-3">Basic Information</h6>
                
                <div class="mb-3">
                  {{ form_row(form.name) }}
                </div>

                <div class="mb-3">
                  {{ form_row(form.description) }}
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    {{ form_row(form.type) }}
                  </div>
                  <div class="col-md-6 mb-3">
                    {{ form_row(form.priority) }}
                  </div>
                </div>
              </div>

              {# Rule Behavior #}
              <div class="mb-4">
                <h6 class="text-secondary border-bottom pb-2 mb-3">Rule Behavior</h6>
                
                <div class="row">
                  <div class="col-md-4 mb-3">
                    <div class="form-check form-switch">
                      {{ form_widget(form.active) }}
                      {{ form_label(form.active) }}
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="form-check form-switch">
                      {{ form_widget(form.stackable) }}
                      {{ form_label(form.stackable) }}
                      {% if form.stackable.vars.help %}
                        <div class="form-text">{{ form.stackable.vars.help }}</div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="col-md-4 mb-3">
                    <div class="form-check form-switch">
                      {{ form_widget(form.exclusive) }}
                      {{ form_label(form.exclusive) }}
                      {% if form.exclusive.vars.help %}
                        <div class="form-text">{{ form.exclusive.vars.help }}</div>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>

              {# Conditions & Actions #}
              <div class="mb-4">
                <h6 class="text-secondary border-bottom pb-2 mb-3">
                  <i class="bi bi-code-square me-2"></i>Rule Logic
                </h6>
                
                <div class="alert alert-info">
                  <i class="bi bi-info-circle me-2"></i>
                  <strong>JSON Configuration:</strong> Define your rule conditions and actions in JSON format. 
                  See the examples in the sidebar for common patterns.
                </div>

                <div class="mb-3">
                  {{ form_row(form.conditions) }}
                </div>

                <div class="mb-3">
                  {{ form_row(form.actions) }}
                </div>
              </div>

              {# Applicable Items #}
              <div class="mb-4">
                <h6 class="text-secondary border-bottom pb-2 mb-3">Applicable Items</h6>
                
                <div class="mb-3">
                  {{ form_row(form.applicableSellables) }}
                </div>
              </div>

              {# Hidden fields #}
              {{ form_rest(form) }}

              {# Submit Buttons #}
              <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                <a href="{{ path('price_rule_index') }}" class="btn btn-outline-secondary">
                  Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-circle me-1"></i>
                  {{ priceRule ? 'Update Rule' : 'Create Rule' }}
                </button>
              </div>

              {{ form_end(form) }}
            </div>
          </div>
        </div>

        {# Help Sidebar #}
        <div class="col-lg-4 mt-4 mt-lg-0">
          <div class="card bg-light shadow-sm mb-3">
            <div class="card-body">
              <h6 class="text-primary mb-3">
                <i class="bi bi-lightbulb me-2"></i>Condition Examples
              </h6>
              
              <div class="mb-3">
                <strong>Customer Segment:</strong>
                <pre class="small bg-white p-2 rounded mb-0"><code>[{
  "field": "customer.segment",
  "operator": "in",
  "value": ["wholesale", "vip"]
}]</code></pre>
              </div>

              <div class="mb-3">
                <strong>Minimum Order Amount:</strong>
                <pre class="small bg-white p-2 rounded mb-0"><code>[{
  "field": "order.subtotal",
  "operator": ">=",
  "value": 100
}]</code></pre>
              </div>

              <div class="mb-0">
                <strong>Time-based (Happy Hour):</strong>
                <pre class="small bg-white p-2 rounded mb-0"><code>[{
  "field": "time.hour",
  "operator": "between",
  "value": [14, 17]
}]</code></pre>
              </div>
            </div>
          </div>

          <div class="card bg-light shadow-sm">
            <div class="card-body">
              <h6 class="text-primary mb-3">
                <i class="bi bi-lightbulb me-2"></i>Action Examples
              </h6>
              
              <div class="mb-3">
                <strong>Percentage Discount:</strong>
                <pre class="small bg-white p-2 rounded mb-0"><code>[{
  "type": "percentage_discount",
  "value": 15
}]</code></pre>
              </div>

              <div class="mb-3">
                <strong>Fixed Price:</strong>
                <pre class="small bg-white p-2 rounded mb-0"><code>[{
  "type": "fixed_price",
  "value": 9.99
}]</code></pre>
              </div>

              <div class="mb-0">
                <strong>Fixed Amount Off:</strong>
                <pre class="small bg-white p-2 rounded mb-0"><code>[{
  "type": "fixed_discount",
  "value": 5.00
}]</code></pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
pre code {
  font-size: 0.75rem;
  line-height: 1.4;
}
</style>
