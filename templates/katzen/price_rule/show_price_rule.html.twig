{% extends activeDash ?? 'katzen/_dashboard_base.html.twig' %}

{% block title %}{{ priceRule.name }}{% endblock %}

{% block main_content %}
<div class="container-fluid py-4">
  <div class="row">
    <div class="col-12">
      {# Header #}
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2>
            <i class="bi bi-tag-fill me-2"></i>
            {{ priceRule.name }}
          </h2>
          <div class="mt-2">
            <span class="badge bg-{{ priceRule.active ? 'success' : 'secondary' }} me-2">
              {{ priceRule.active ? 'ACTIVE' : 'INACTIVE' }}
            </span>
            <span class="badge bg-info">{{ priceRule.type|upper }}</span>
            {% if priceRule.stackable %}
              <span class="badge bg-primary">STACKABLE</span>
            {% endif %}
            {% if priceRule.exclusive %}
              <span class="badge bg-warning">EXCLUSIVE</span>
            {% endif %}
          </div>
        </div>
        <div class="btn-group">
          <a href="{{ path('price_rule_edit', {'id': priceRule.id}) }}" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit
          </a>
          <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" 
                  data-bs-toggle="dropdown" aria-expanded="false">
            <span class="visually-hidden">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li>
              <form action="{{ path('price_rule_toggle_active', {'id': priceRule.id}) }}" method="post" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('price_rule_toggle_' ~ priceRule.id) }}">
                <button type="submit" class="dropdown-item">
                  <i class="bi bi-{{ priceRule.active ? 'x-circle' : 'check-circle' }} me-2"></i>
                  {{ priceRule.active ? 'Deactivate' : 'Activate' }}
                </button>
              </form>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form action="{{ path('price_rule_duplicate', {'id': priceRule.id}) }}" method="post" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('price_rule_duplicate_' ~ priceRule.id) }}">
                <button type="submit" class="dropdown-item">
                  <i class="bi bi-files me-2"></i>Duplicate Rule
                </button>
              </form>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <form action="{{ path('price_rule_delete', {'id': priceRule.id}) }}" method="post" 
                    onsubmit="return confirm('Are you sure you want to delete this price rule?');" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('price_rule_delete_' ~ priceRule.id) }}">
                <button type="submit" class="dropdown-item text-danger">
                  <i class="bi bi-trash me-2"></i>Delete Rule
                </button>
              </form>
            </li>
          </ul>
        </div>
      </div>

      <div class="row">
        {# Main Information #}
        <div class="col-lg-8">
          {# Basic Details Card #}
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
              <h5 class="mb-0">Rule Details</h5>
            </div>
            <div class="card-body">
              <div class="row mb-3">
                <div class="col-md-4">
                  <small class="text-muted d-block">Name</small>
                  <strong>{{ priceRule.name }}</strong>
                </div>
                <div class="col-md-4">
                  <small class="text-muted d-block">Type</small>
                  <span class="badge bg-info">{{ priceRule.type|upper }}</span>
                </div>
                <div class="col-md-4">
                  <small class="text-muted d-block">Priority</small>
                  <strong>{{ priceRule.priority }}</strong>
                  <small class="text-muted">(lower = higher priority)</small>
                </div>
              </div>

              {% if priceRule.description %}
                <div class="mb-3">
                  <small class="text-muted d-block">Description</small>
                  <p class="mb-0">{{ priceRule.description }}</p>
                </div>
              {% endif %}

              <div class="row">
                <div class="col-md-4">
                  <small class="text-muted d-block">Status</small>
                  <span class="badge bg-{{ priceRule.active ? 'success' : 'secondary' }}">
                    {{ priceRule.active ? 'Active' : 'Inactive' }}
                  </span>
                </div>
                <div class="col-md-4">
                  <small class="text-muted d-block">Stackable</small>
                  <i class="bi bi-{{ priceRule.stackable ? 'check-circle-fill text-success' : 'x-circle-fill text-muted' }}"></i>
                  {{ priceRule.stackable ? 'Yes' : 'No' }}
                </div>
                <div class="col-md-4">
                  <small class="text-muted d-block">Exclusive</small>
                  <i class="bi bi-{{ priceRule.exclusive ? 'check-circle-fill text-warning' : 'x-circle-fill text-muted' }}"></i>
                  {{ priceRule.exclusive ? 'Yes' : 'No' }}
                </div>
              </div>
            </div>
          </div>

          {# Conditions Card #}
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
              <h5 class="mb-0">
                <i class="bi bi-filter me-2"></i>Conditions
              </h5>
            </div>
            <div class="card-body">
              {% if priceRule.conditions %}
                <div class="alert alert-info mb-3">
                  <i class="bi bi-info-circle me-2"></i>
                  This rule applies when the following conditions are met:
                </div>
                <pre class="bg-light p-3 rounded mb-0"><code>{{ priceRule.conditions|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
              {% else %}
                <div class="alert alert-warning mb-0">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  No conditions defined. This rule will apply to all transactions.
                </div>
              {% endif %}
            </div>
          </div>

          {# Actions Card #}
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
              <h5 class="mb-0">
                <i class="bi bi-lightning-fill me-2"></i>Actions
              </h5>
            </div>
            <div class="card-body">
              {% if priceRule.actions %}
                <div class="alert alert-success mb-3">
                  <i class="bi bi-check-circle me-2"></i>
                  When conditions are met, the following actions are performed:
                </div>
                <pre class="bg-light p-3 rounded mb-0"><code>{{ priceRule.actions|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
              {% else %}
                <div class="alert alert-warning mb-0">
                  <i class="bi bi-exclamation-triangle me-2"></i>
                  No actions defined. This rule will have no effect.
                </div>
              {% endif %}
            </div>
          </div>

          {# Applicable Items Card #}
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
              <h5 class="mb-0">
                <i class="bi bi-box-seam me-2"></i>Applicable Items
              </h5>
              <span class="badge bg-secondary">{{ priceRule.applicableSellables|length }}</span>
            </div>
            <div class="card-body">
              {% if priceRule.applicableSellables|length > 0 %}
                <p class="text-muted mb-3">This rule applies to the following items:</p>
                <div class="list-group">
                  {% for sellable in priceRule.applicableSellables %}
                    <a href="{{ path('sellable_show', {'id': sellable.id}) }}" 
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                      <div>
                        <i class="bi bi-box-seam text-muted me-2"></i>
                        <strong>{{ sellable.name }}</strong>
                        {% if sellable.sku %}
                          <small class="text-muted ms-2">({{ sellable.sku }})</small>
                        {% endif %}
                      </div>
                      <span class="badge bg-info">{{ sellable.type }}</span>
                    </a>
                  {% endfor %}
                </div>
              {% else %}
                <div class="alert alert-info mb-0">
                  <i class="bi bi-info-circle me-2"></i>
                  No specific items selected. This rule applies to <strong>all items</strong>.
                </div>
              {% endif %}
            </div>
          </div>
        </div>

        {# Sidebar #}
        <div class="col-lg-4">
          {# Quick Stats Card #}
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
              <h6 class="mb-0">Quick Stats</h6>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <small class="text-muted d-block">Status</small>
                <span class="badge bg-{{ priceRule.active ? 'success' : 'secondary' }}">
                  {{ priceRule.active ? 'Active' : 'Inactive' }}
                </span>
              </div>
              <div class="mb-3">
                <small class="text-muted d-block">Priority Level</small>
                <strong>{{ priceRule.priority }}</strong>
              </div>
              <div class="mb-3">
                <small class="text-muted d-block">Applicable Items</small>
                <strong>
                  {% if priceRule.applicableSellables|length > 0 %}
                    {{ priceRule.applicableSellables|length }} items
                  {% else %}
                    All items
                  {% endif %}
                </strong>
              </div>
              <div class="mb-0">
                <small class="text-muted d-block">Created</small>
                <strong>{{ priceRule.createdAt ? priceRule.createdAt|date('M d, Y') : 'N/A' }}</strong>
              </div>
            </div>
          </div>

          {# Rule Behavior Card #}
          <div class="card shadow-sm mb-4">
            <div class="card-header bg-light">
              <h6 class="mb-0">Rule Behavior</h6>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <div class="d-flex align-items-center">
                  <i class="bi bi-{{ priceRule.stackable ? 'check-circle-fill text-success' : 'x-circle-fill text-muted' }} me-2"></i>
                  <div>
                    <strong>Stackable</strong>
                    <p class="small text-muted mb-0">
                      {{ priceRule.stackable ? 'Can combine with other rules' : 'Cannot combine with other rules' }}
                    </p>
                  </div>
                </div>
              </div>
              <div class="mb-0">
                <div class="d-flex align-items-center">
                  <i class="bi bi-{{ priceRule.exclusive ? 'check-circle-fill text-warning' : 'x-circle-fill text-muted' }} me-2"></i>
                  <div>
                    <strong>Exclusive</strong>
                    <p class="small text-muted mb-0">
                      {{ priceRule.exclusive ? 'Stops rule evaluation when applied' : 'Allows further rules to be evaluated' }}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {# Actions Card #}
          <div class="card shadow-sm">
            <div class="card-header bg-light">
              <h6 class="mb-0">Actions</h6>
            </div>
            <div class="card-body">
              <div class="d-grid gap-2">
                <a href="{{ path('price_rule_edit', {'id': priceRule.id}) }}" class="btn btn-primary">
                  <i class="bi bi-pencil me-2"></i>Edit Rule
                </a>
                <form action="{{ path('price_rule_toggle_active', {'id': priceRule.id}) }}" method="post">
                  <input type="hidden" name="_token" value="{{ csrf_token('price_rule_toggle_' ~ priceRule.id) }}">
                  <button type="submit" class="btn btn-outline-{{ priceRule.active ? 'warning' : 'success' }} w-100">
                    <i class="bi bi-{{ priceRule.active ? 'x-circle' : 'check-circle' }} me-2"></i>
                    {{ priceRule.active ? 'Deactivate' : 'Activate' }}
                  </button>
                </form>
                <form action="{{ path('price_rule_duplicate', {'id': priceRule.id}) }}" method="post">
                  <input type="hidden" name="_token" value="{{ csrf_token('price_rule_duplicate_' ~ priceRule.id) }}">
                  <button type="submit" class="btn btn-outline-info w-100">
                    <i class="bi bi-files me-2"></i>Duplicate
                  </button>
                </form>
                <hr class="my-2">
                <form action="{{ path('price_rule_delete', {'id': priceRule.id}) }}" method="post" 
                      onsubmit="return confirm('Are you sure you want to delete this price rule? This action cannot be undone.');">
                  <input type="hidden" name="_token" value="{{ csrf_token('price_rule_delete_' ~ priceRule.id) }}">
                  <button type="submit" class="btn btn-outline-danger w-100">
                    <i class="bi bi-trash me-2"></i>Delete Rule
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      {# Back Button #}
      <div class="mt-4">
        <a href="{{ path('price_rule_index') }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left me-1"></i>Back to All Rules
        </a>
      </div>
    </div>
  </div>
</div>

<style>
pre code {
  font-size: 0.875rem;
  line-height: 1.5;
}
</style>
{% endblock %}
