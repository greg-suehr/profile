{% extends 'profile_base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block content %}
    <div class="container mt-5">
        <article class="blog-post">

          <h1 class="display-4 mb-3">{{ post.title }}</h1>
          <p class="text-suppressed">{{ post.subtitle }}</p>
          
          {# Post Metadata #}
          <div class="post-meta mb-4 text-muted">
            <small>
              Published on {{ post.createdAt|date('F j, Y') }} by 
              <strong>{{ post.author.username }}</strong>
            </small>
          </div>

          {% if post.featuredImage %}
          <div class="featured-image text-center mb-4">
            <img src="{{ asset('/uploads/blog/' ~ post.featuredImage) }}" 
                 alt="{{ post.title }}" 
                 class="img-fluid rounded shadow-sm" 
                 style="max-width: 50%; height: auto;">
          </div>
          {% endif %}
          {# Render Blog Content - HTML with CKEditor | Raw #}
          <div class="post-content">
            {{ post.content|raw }}
          </div>
          
          {# Back to Blog Link #}
          <div class="mt-5">
            <a href="{{ path('profile_blog') }}" class="btn btn-secondary">‚Üê Back to Blog</a>
          </div>
        </article>
    </div>
{% endblock %}
