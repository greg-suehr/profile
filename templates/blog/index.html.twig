{% extends 'profile_base.html.twig' %}

{% block title %}Greg Suehr{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-center mb-5">Blog</h1>

    <div class="row">
        {% for post in posts %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if post.featuredImage %}
                        <img src="{{ asset('uploads/blog/' ~ post.featuredImage) }}" alt="{{ post.title }}" class="card-img-top">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('app_blog_post', {'slug': post.slug}) }}" class="text-dark text-decoration-none">
                                {{ post.title }}
                            </a>
                        </h5>
                        <p class="card-text text-muted">
                            {{ post.summary|length > 120 ? post.summary|slice(0, 120) ~ '...' : post.summary }}
                        </p>
                        <a href="{{ path('app_blog_post', {'slug': post.slug}) }}" class="btn btn-primary btn-sm">
                            Read More
                        </a>
                    </div>
                    <div class="card-footer text-muted">
                        Published on {{ post.publishedAt|date('F d, Y') }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p>No blog posts available yet. Stay tuned!</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
