    }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes scrollPulse {
      0%, 100% {
        opacity: 0.4;
        transform: scaleY(1);
      }
      50% {
        opacity: 1;
        transform: scaleY(1.2);
      }
    }

    @media (max-width: 768px) {
      :root {
        --sidebar-width: 40px;
      }
      
